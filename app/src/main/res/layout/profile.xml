                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--name--"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/name"/>

            <TextView
