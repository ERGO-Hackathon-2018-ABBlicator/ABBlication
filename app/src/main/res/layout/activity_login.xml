<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/loginbg">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/ErgoGrau"
            android:padding="3dp"
            android:src="@mipmap/app_logo" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/ErgoWeis"
            android:textColor="@color/ErgoWeis"
            android:textColorHighlight="@color/ErgoWeis"
            android:textColorHint="@color/ErgoWeis"
            android:textColorLink="@color/ErgoWeis" />

        <EditText
            android:id="@+id/text_username"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/hint_username"
            android:inputType="text"
            android:maxLines="1"
            android:shadowColor="@color/ErgoWeis"
            android:textColor="@color/ErgoWeis"
            android:textColorHighlight="@color/ErgoWeis"
            android:textColorHint="@color/ErgoWeis"
            android:textColorLink="@color/ErgoWeis" />

        <EditText
            android:id="@+id/text_password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:shadowColor="@color/ErgoWeis"
            android:textColor="@color/ErgoWeis"
            android:textColorHighlight="@color/ErgoWeis"
            android:textColorHint="@color/ErgoWeis"
            android:textColorLink="@color/ErgoWeis" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@color/ErgoWeis"
            android:text="@string/label_login"
            android:textColor="#000" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>